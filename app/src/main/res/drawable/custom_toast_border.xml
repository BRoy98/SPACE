    <!--<gradient
        android:angle="90"
        android:startColor="#99FEC400"
        android:centerColor="#99FF9D22"
        android:endColor="#99FEC400"/>-->
    <gradient
        android:angle="90"
        android:startColor="#CCFEC400"
        android:centerColor="#CCFEC400"
